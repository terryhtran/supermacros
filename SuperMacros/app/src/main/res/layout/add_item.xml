<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_item_text"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:textAlignment="center">

    <EditText
        android:id="@+id/item_name_input"
        android:ems="10"
        android:inputType="text"
        android:layout_below="@+id/name_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:text="" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/carbs_text_view"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_width="wrap_content"
        android:text="Name:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/calories_text_view"
        android:inputType="text"
        android:layout_below="@+id/item_name_input"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Calories:"
        android:textColor="@android:color/holo_blue_dark" />

    <EditText
        android:id="@+id/calories_input"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/calories_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="0"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/fats_text_view"
        android:layout_below="@+id/calories_input"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fats:"
        android:textColor="@android:color/holo_orange_dark" />

    <EditText
        android:id="@+id/fats_input"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/fats_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:text="0" />

    <TextView
        android:id="@+id/carbs_text_view"
        android:layout_below="@+id/fats_input"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Carbs:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_red_dark" />

    <EditText
        android:id="@+id/carbs_input"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/carbs_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:text="0"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/protein_text_view"
        android:layout_below="@+id/carbs_input"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Protien:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_green_dark" />

    <EditText
        android:id="@+id/protein_input"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/protein_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="0"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/serving_size_text_view"
        android:layout_below="@+id/protein_input"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Serving Size:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/serving_size_input"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/serving_size_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="0"
        android:textAlignment="center" />

    <Button
        android:id="@+id/add_to_log_button"
        android:layout_below="@+id/serving_size_input"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/fats_text_view"
        android:layout_width="wrap_content"
        android:text="Add" />

    <Button
        android:id="@+id/delete_item_button"
        android:layout_alignTop="@+id/add_to_log_button"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/fats_text_view"
        android:layout_width="wrap_content"
        android:text="Delete" />

</RelativeLayout>