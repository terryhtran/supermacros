<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_item_text"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:textAlignment="center">

    <TextView
        android:id="@+id/name_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_width="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/calories_text_view"
        android:inputType="text"
        android:layout_below="@+id/name_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:text="Calories: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/fats_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/calories_text_view"
        android:layout_centerHorizontal="true"
        android:text="Fats: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/carbs_text_view"
        android:layout_below="@+id/fats_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Carbs: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/protein_text_view"
        android:layout_below="@+id/carbs_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Protien: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/serving_size_text_view"
        android:layout_below="@+id/protein_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Serving Size: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/servings_text_view"
        android:layout_below="@+id/serving_size_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Servings:"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/serving_size_input"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/servings_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="1"
        android:textAlignment="center" />

    <Button
        android:id="@+id/add_to_log_button"
        android:layout_below="@+id/serving_size_input"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:text="Add To Log" />

    <TextView
        android:id="@+id/textView"
        android:layout_below="@+id/add_to_log_button"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_width="wrap_content"
        android:text="3500 calories = 1lb (.45kg)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>