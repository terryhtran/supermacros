<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_item_text"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:textAlignment="center" >

    <TextView
        android:id="@+id/calories_text_view"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Calories:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_blue_dark" />

    <EditText
        android:id="@+id/target_calories_input"
        android:ems="10"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/calories_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="0"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/fats_text_view"
        android:layout_below="@+id/target_calories_input"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fats:"
        android:textColor="@android:color/holo_orange_dark" />

    <EditText
        android:id="@+id/target_fats_input"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/fats_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="0"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/target_carbs_text_view"
        android:layout_below="@+id/target_fats_input"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbs:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_red_dark" />

    <EditText
        android:id="@+id/target_carbs_input"
        android:ems="10"
        android:layout_below="@+id/target_carbs_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="0"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/target_protein_text_view"
        android:layout_below="@+id/target_carbs_input"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Protien:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_green_dark" />

    <EditText
        android:id="@+id/target_protein_input"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/target_protein_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:text="0" />

    <Button
        android:id="@+id/set_target_button"
        android:layout_below="@+id/target_protein_input"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:text="Set" />

</RelativeLayout>