<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_item_text"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:textAlignment="center">

    <TextView
        android:id="@+id/name_text_view"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/entry_time_text_view"
        android:layout_below="@+id/name_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/calories_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_time_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:inputType="text"
        android:text="Calories: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/fats_text_view"
        android:layout_below="@+id/calories_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Fats: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/carbs_text_view"
        android:layout_below="@+id/fats_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Carbs: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/protein_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/carbs_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Protien: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/servings_text_view"
        android:layout_below="@+id/protein_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Servings: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAlignment="center" />

    <Button
        android:id="@+id/delete_entry_button"
        android:layout_below="@+id/servings_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_width="wrap_content"
        android:text="Delete" />

</RelativeLayout>